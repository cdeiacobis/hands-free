{
  "name": "Hands Free",
  "version": "1.0",
  "description": "Hands free User Interface",
  "background": {
    "scripts": [
      "background/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["utils/tf.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "manifest_version": 2
}
